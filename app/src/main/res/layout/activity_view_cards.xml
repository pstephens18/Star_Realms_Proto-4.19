<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/milky_way"
    tools:context="edu.whitworth.test1.viewCards">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/battlepod2"
        android:id="@+id/imageView16"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/blob_fighter1"
        android:id="@+id/imageView17"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/explorer2"
        android:id="@+id/imageView18"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battle Pod: Allows you to scrap a card in the trade row. "
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:height="35dp"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/imageView16"
        android:layout_toEndOf="@+id/imageView16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blob Fighter: Kill it before it signals the hive or run. "
        android:id="@+id/textView10"
        android:textColor="#ffffff"
        android:height="35dp"
        android:textSize="20dp"
        android:layout_alignTop="@+id/imageView17"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView17"
        android:layout_alignBottom="@+id/imageView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Explorer: Explore the stars."
        android:id="@+id/textView15"
        android:textColor="#ffffff"
        android:height="35dp"
        android:textSize="20dp"
        android:layout_alignTop="@+id/imageView18"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView18"
        android:layout_alignParentBottom="true" />

</RelativeLayout>

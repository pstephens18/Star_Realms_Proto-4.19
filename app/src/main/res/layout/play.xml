<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background = "@drawable/milky_way"
    tools:context="edu.whitworth.test1.Play">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trade: 0"
        android:id="@+id/textView11"
        android:textColor="#f1e8c942"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView13"
        android:text = "Combat: 0"
        android:textColor="#f1e8c942"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Opponent Authority: 50"
        android:onClick = "attack"
        android:id="@+id/textView14"
        android:textColor="#f1e8c942"
        android:layout_below="@+id/button6"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play All"
        android:id="@+id/button5"
        android:onClick = "playAll"
        android:layout_above="@+id/textView13"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:id="@+id/button6"
        android:onClick = "quit"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/imageView5"
        android:onClick = "buyCard"
        android:layout_below="@+id/button6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/imageView6"
        android:onClick = "buyCard"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/imageView7"
        android:onClick = "buyCard"
        android:layout_alignTop="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/imageView8"
        android:onClick = "buyCard"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/imageView9"
        android:onClick = "buyCard"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView8" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/imageView10"
        android:onClick = "buyCard"
        android:layout_alignBottom="@+id/imageView9"
        android:layout_toEndOf="@+id/imageView9" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/imageView11"
        android:onClick = "playCard"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/imageView12"
        android:onClick = "playCard"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_alignStart="@+id/imageView6" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/imageView13"
        android:onClick = "playCard"
        android:layout_alignBottom="@+id/imageView12"
        android:layout_toEndOf="@+id/imageView12" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/imageView14"
        android:onClick = "playCard"
        android:layout_alignBottom="@+id/imageView13"
        android:layout_alignStart="@+id/imageView8" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/imageView15"
        android:onClick = "playCard"
        android:layout_alignBottom="@+id/imageView14"
        android:layout_toEndOf="@+id/imageView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView12"
        android:textColor = "#f1e8c942"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignParentStart="true"
        android:text="Authority: 200" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView17"
        android:textColor="#ffffff"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView11"
        android:layout_alignEnd="@+id/button5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Round"
        android:id="@+id/button7"
        android:onClick = "nextRound"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView18"
        android:textColor="#ffffff"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView17"
        android:layout_alignEnd="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView23"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Trade Row"
        android:id="@+id/textView24"
        android:layout_above="@+id/imageView6"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Your Hand"
        android:id="@+id/textView25"
        android:layout_above="@+id/imageView12"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="YOU WON"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:height="100dp"
        android:textSize="130dp"
        android:layout_alignParentStart="true"
        android:background="#0d0c0c"
        android:layout_below="@+id/button6"
        android:layout_above="@+id/button5"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="YOU LOST"
        android:id="@+id/textView9"
        android:layout_below="@+id/button6"
        android:layout_above="@+id/button5"
        android:textColor="#ffffff"
        android:background="#1a1919"
        android:textSize="130dp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView3" />

</RelativeLayout>
